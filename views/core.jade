doctype html
html(lang="en")
	head
		title WA
		link(rel="shortcut icon", type="image/x-icon", href="/favicon.ico")
		link(rel="stylesheet", type="text/css", href="//fonts.googleapis.com/css?family=Open+Sans:400,700,800")
		link(rel="stylesheet", type="text/css", href="//fonts.googleapis.com/css?family=Raleway:400,700")
		link(rel="stylesheet", type="text/css", href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css")
		link(rel="stylesheet", type="text/css", href="/css/style.css")
		block css
	body
		.content
			.loading
				div
					a(href="/index")
						img(src="/img/logo.png")
			include /navbar
			.page
				div.user_box
					if user
						| Welcome, 
						span #{user}
						| !
					else
						| Please 
						span log in or register
						| !
				block content
		script(type="text/javascript", src="//code.jquery.com/jquery-2.1.1.min.js")
		script(type="text/javascript", src="/js/index.js")
		block js